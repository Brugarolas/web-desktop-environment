{
  "name": "root",
  "private": true,
  "scripts": {
    "dev:server": "cd packages/home-edition-server && npm start",
    "dev:web": "cd packages/views && npm start",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "start": "lerna bootstrap --  --unsafe-perm && npm run dev",
    "lint": "lerna run lint",
    "prepare": "lerna run prepare"
  },
  "devDependencies": {
    "concurrently": "5.3.0",
    "lerna": "4.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}

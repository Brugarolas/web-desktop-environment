{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2022",
    "module": "NodeNext",
    "declaration": true,
    "outDir": "lib",
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "lib",
    "paths": {
      "@index": ["index"],
      "@root/*": ["*"],
      "@apps/*": ["apps/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["lib/**/*"],
  "exclude": ["**/node_modules"]
}
